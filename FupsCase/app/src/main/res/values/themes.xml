<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FupsCase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transperent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>


    <style name="LoginDescriptionStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/slider_description_color</item>
    </style>


    <style name="BoldBlueTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="OfferSliderHeaderStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/slider_header_color</item>
    </style>

    <style name="OfferSliderDescriptionStyle">
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/slider_description_color</item>
    </style>

    <style name="OfferListHeaderStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/item_header_color</item>
    </style>

    <style name="OfferListDescriptionStyle">
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/item_description_color</item>
    </style>


    <style name="OfferListPageTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/slider_header_color</item>
    </style>


</resources>